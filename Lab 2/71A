#include <iostream>
#include<string>

using namespace std;

int main()
{
    int himu;
    cin>>himu;
    cout<<"";
    int shuvro,misirali,baker,number=0;
    while(himu--)
    {
        cin>>shuvro>>misirali>>baker;
        if(shuvro+misirali+baker>=2)
        {
            number+=1;
        }
    }
    cout<<number<<endl;
}
